<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.pada0008.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GiftR</name>
    <description>
        Store gifts idea for contacts.
    </description>
    <author email="pada0008@algonquinlive.com" href="http://cordova.io">
        MADD Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/res-long-land-hdpi/default.png" density="land-hdpi" />
            <splash src="res/screen/android/res-long-land-mdpi/default.png" density="land-mdpi" />
            <splash src="res/screen/android/res-long-land-xhdpi/default.png" density="land-xhdpi" />
            <splash src="res/screen/android/res-long-land-xxhdpi/default.png" density="land-xxhdpi" />
            <splash src="res/screen/android/res-long-land-xxxhdpi/default.png" density="land-xxxhdpi" />
            <splash src="res/screen/android/res-long-port-hdpi/default.png" density="port-hdpi" />
            <splash src="res/screen/android/res-long-port-mdpi/default.png" density="port-mdpi" />
            <splash src="res/screen/android/res-long-port-xhdpi/default.png" density="port-xhdpi" />
            <splash src="res/screen/android/res-long-port-xxhdpi/default.png" density="port-xxhdpi" />
            <splash src="res/screen/android/res-long-port-xxxhdpi/default.png" density="port-xxxhdpi" />
            <!-- Icons -->
            <icon src="res/icon/android/drawable-mdpi/icon.png" density="mdpi" />
            <icon src="res/icon/android/drawable-hdpi/icon.png" density="hdpi" />
            <icon src="res/icon/android/drawable-xhdpi/icon.png" density="xhdpi" />
            <icon src="res/icon/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
            <icon src="res/icon/android/drawable-xxxhdpi/icon.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
